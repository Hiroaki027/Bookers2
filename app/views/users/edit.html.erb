<% if @user.errors.any? %>
  <%= @user.errors.count %>error has found this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class= "container">
  <div class= "row d-flex justify-content-center">
    <div class= "col-6">
      <h2>User info<i class="fa-solid fa-address-book ml-2"></i></h2>
        <%= form_with model: @user do |f| %>
          <label for="inputName">Name</label><br>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%><br />
          <label for="inputImage">Image</label><br />
          <%= f.file_field :profile_image, accept: "image/*" %><br />
          <label for="inputIntroduction">Introduction</label><br />
          <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" %><br />
          <%= f.submit "Update User", class: 'btn btn-secondary btn-block mt-2' %>
        <% end %>
    </div>
  </div>
</div>

