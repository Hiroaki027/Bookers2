<div class="container">
  <div class= "row">
    <%= render 'books/info', user: @user, book: @book %>
    <div class= "col-md-8 offset-md-1">
      <h2>Users<i class="fa-solid fa-user-group ml-2"></i></h2>
      <table class= "table table-hover">
        <tr>
          <th>Image</th>
          <th>Name</th>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show",user_path(user) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>


