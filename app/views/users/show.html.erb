<div>
  <%= flash[:notice] %>
</div>

<div class= "container">
  <div class= "row">
    <%= render 'books/info', user: @user, book: @book_new %>
    <div class= "col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class= "table table-hover">
        <tr>
          <th>User</th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @book.each do |f| %>
         <tr>
            <td><%= link_to user_path(@user.id) do %>
                  <%= image_tag f.user.get_profile_image %>
                <% end %>
            </td>
            <td><%= link_to f.title, book_path(f) %></td>
            <td><%= f.body %></td>
         </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
