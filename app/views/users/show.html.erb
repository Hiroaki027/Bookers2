<div>
  <%= flash[:notice] %>
</div>

<%= render 'books/info', user: @user, book: @book_new %>
<h2>Books</h2>
<table>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @book.each do |f| %>
   <tr>
      <td><%= image_tag f.user.get_profile_image %></td>
      <td><%= link_to f.title, book_path(f) %></td>
      <td><%= f.body %></td>
   </tr>
  <% end %>
</table>