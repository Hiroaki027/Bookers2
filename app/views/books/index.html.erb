<div class= "container">
  <div class= "row">
    <%= render 'info', user: @user, book: @book %>
    <div class= "col-7 offset-1">
      <h2>Books<i class="fa-solid fa-book ml-2"></i></h2>
        <table class= "table">
          <tr>
            <th>User</th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @books.each do |book| %>
           <tr>
             <td><%= image_tag book.user.get_profile_image %></td>
             <td><%= link_to book.title, book_path(book.id) %></td>
             <td><%= book.body %></td>
           </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>

