<% if @book.errors.any? %>
  <%= @book.errors.count %>error has found this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class= "container">
  <div class= "row d-flex justify-content-center">
    <div class= "col-6">
      <h1>Editing Book</h1>
        <%= form_with model: @book do |f| %>
          <p>Title</p>
          <%= f.text_field :title %>
        
          <p>Opinion</p>
          <%= f.text_area :body %><br />
        
          <%=f.submit 'Update Book', class: 'btn btn-success btn-block my-2'%>
        <% end %>
        <br />
        <%= link_to "Show", book_path(@book.id) %> |
        <%= link_to "Back", books_path %>
    </div>
  </div>
</div>
