  <table>
    <tr>
      <th>Name</th>
    </tr>
    <tr>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <th>Introduction</th>
    </tr>
    <tr>
      <td><%= user.introduction %></td>
    </tr>
  </table>
