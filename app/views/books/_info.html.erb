<h2>User info</h2>
<% books.each do |book| %>
<div>
  <%= image_tag book.user.get_profile_image %>
  <p>name: <%= book.user.name %> </p>
  <p>introduction: <%= book.user.introduction %></p>
  <%= book.submit "Edit" %>
</div>
<% end %>

<h2>New book</h2>

<%= form_with model: @book, url: '/books',method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %> 
<% end %>